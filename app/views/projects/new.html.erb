<h1>New Project</h1>

<div class="d-flex justify-content-evenly">
    <%= render "partials/project_form" %>
    
    <div class="container">
        <div class="card" id="chat1" style="border-radius: 15px;">
            <div
                class="card-header d-flex justify-content-between align-items-center p-3 bg-primary text-white border-bottom-0"
                style="border-top-left-radius: 15px; border-top-right-radius: 15px;">
                <i class="fas fa-angle-left"></i>
                <p class="mb-0 fw-bold">Generate Project Description</p>
                <i class="fas fa-times"></i>
            </div>
            <div class="card-body bg-info" style="height: 60vh;">

                <div data-mdb-input-init class="form-outline">
                    <label class="form-label m-2" for="textAreaExample"><span class="text-dark">Type your project details with some key-words</span></label>
                    <textarea class="form-control bg-body-tertiary m-2" id="textAreaExample" rows="4"></textarea>
                </div>

                <div class="d-flex flex-row justify-content-end m-4">
                    <div class="p-3 me-3 border bg-body-tertiary" style="border-radius: 15px;">
                        <p class="small mb-0">Thank you, I really like your product.</p>
                    </div>
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava2-bg.webp"
                        alt="avatar 1" style="width: 45px; height: 100%;">
                </div>
            </div>
        </div>
    </div>

</div>


