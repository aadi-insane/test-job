<h1 class="mb-4">All Projects</h1>

<div class="mb-3">
  <%= link_to "Add New Project", new_project_path, class: "btn btn-success" %>
</div>

<table class="table table-hover table-bordered">
  <thead class="table-primary">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Title</th>
      <th scope="col">Manager</th>
      <th scope="col">Status</th>
      <th scope="col" colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @projects.find_each do |project| %>
      <tr>
        <th scope="row"><%= project.id %></th>
        <td><%= project.title %></td>

        <td><%= project.manager.try(:name) || "N/A" %></td>

        <td><%= project.status.capitalize %></td>

        <td><%= link_to "Show", project_path(project), class: "btn btn-sm btn-info" %></td>
        <td><%= link_to "Edit", edit_project_path(project), class: "btn btn-sm btn-warning" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
