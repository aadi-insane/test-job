<h1>New Project</h1>
    <div class="d-flex justify-content-evenly">
    <%= render "partials/project_form" %>

        <div class="container">
            <div class="card" id="chat1" style="border-radius: 15px;">
                <div class="card-header d-flex justify-content-between align-items-center p-3 bg-primary text-white border-bottom-0"
                    style="border-top-left-radius: 15px; border-top-right-radius: 15px;">
                    <i class="fas fa-angle-left"></i>
                    <p class="mb-0 fw-bold">Generate Project Description</p>
                    <i class="fas fa-times"></i>
                </div>

                <div class="card-body bg-info" style="height: auto;">

                    <%= form_with url: project_descriptions_path, method: :post, local: true do |form| %>
                    <div class="form-outline">
                        <label class="form-label m-2" for="keywords">
                        <span class="text-dark">Type your project details with some key-words</span>
                        </label>
                        <%= form.text_area :keywords, class: "form-control bg-body-tertiary m-2", rows: 4 %>
                    </div>

                    <div class="text-end m-2">
                        <%= form.submit "Generate Description", class: "btn btn-dark" %>
                    </div>
                    <% end %>

                    <% if defined?(@description) && @description.present? %>
                    <div class="d-flex flex-row justify-content-start m-4">
                        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava1-bg.webp"
                            alt="avatar" style="width: 45px; height: 100%;">
                        <div class="p-3 ms-3 border bg-body-tertiary text-dark" style="border-radius: 15px;">
                        <p class="small mb-0"><%= @description %></p>
                        </div>
                    </div>
                    <% end %>

                </div>
            </div>
        </div>
    </div>