<div class="container-fluid py-4" style="background-color: #f8f9fa; min-height: 100vh;">
  <% unless user_signed_in? %>
    <div class="text-center my-5">
      <h1 class="display-4 fw-bold">Welcome</h1>
      <p class="lead text-muted">Find me in <code>app/views/home/index.html.erb</code></p>
    </div>
  <% end %>

  <% if user_signed_in? && current_user.admin? %>
    <div class="mb-4">
      <h2 class="fw-bold text-dark text-center mb-3">Admin Dashboard</h2>
    </div>

    <div class="row mb-4">
      <div class="col-12">
        <div class="card shadow-sm border-0">
          <div class="card-header bg-white fw-semibold">Tasks by Assignee</div>
          <div class="card-body d-flex align-items-center justify-content-center" style="min-height: 300px;">
            <%= line_chart Task.group(:contributor_id).count, class: "w-100 h-100" %>
          </div>
        </div>
      </div>
    </div>

    <div class="row g-4">
      <div class="col-md-6 col-xl-4">
        <div class="card shadow-sm border-0 h-100">
          <div class="card-header bg-white fw-semibold">Projects by Manager (Pie)</div>
          <div class="card-body d-flex align-items-center justify-content-center" style="min-height: 250px;">
            <%= pie_chart Project.group(:manager_id).count, class: "w-100 h-100" %>
          </div>
        </div>
      </div>

      <div class="col-md-6 col-xl-4">
        <div class="card shadow-sm border-0 h-100">
          <div class="card-header bg-white fw-semibold">Projects by Manager (Column)</div>
          <div class="card-body d-flex align-items-center justify-content-center" style="min-height: 250px;">
            <%= column_chart Project.group(:manager_id).count, class: "w-100 h-100" %>
          </div>
        </div>
      </div>

      <div class="col-md-6 col-xl-4">
        <div class="card shadow-sm border-0 h-100">
          <div class="card-header bg-white fw-semibold">Projects by Created Day</div>
          <div class="card-body d-flex align-items-center justify-content-center" style="min-height: 250px;">
            <%= line_chart Project.group_by_day(:created_at).count, class: "w-100 h-100" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
