<div class="container">
  <% if user_signed_in? && current_user.admin? %>
    
    <div class="row g-4 mb-4">
      <div class="col-12">
        <div class="card shadow-sm">
          <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Tasks by Assignee</h5>
          </div>
          <div class="card-body">
            <%= line_chart @task_data, class: "w-100", height: "300px" %>
          </div>
        </div>
      </div>
    </div>

    <div class="row g-4 mb-4">
      <div class="col-md-6 col-xl-4">
        <div class="card shadow-sm h-100">
          <div class="card-header bg-info text-white">
            <h6 class="mb-0">Projects by Manager (Pie)</h6>
          </div>
          <div class="card-body d-flex align-items-center justify-content-center">
            <%= pie_chart @project_data, class: "w-100", height: "250px" %>
          </div>
        </div>
      </div>

      <div class="col-md-6 col-xl-4">
        <div class="card shadow-sm h-100">
          <div class="card-header bg-warning text-dark">
            <h6 class="mb-0">Projects by Manager (Column)</h6>
          </div>
          <div class="card-body d-flex align-items-center justify-content-center">
            <%= column_chart @project_data, class: "w-100", height: "250px" %>
          </div>
        </div>
      </div>

      <div class="col-md-6 col-xl-4">
        <div class="card shadow-sm h-100">
          <div class="card-header bg-success text-white">
            <h6 class="mb-0">Projects by Created Day</h6>
          </div>
          <div class="card-body d-flex align-items-center justify-content-center">
            <%= line_chart Project.group_by_day(:created_at).count, class: "w-100", height: "250px" %>
          </div>
        </div>
      </div>
    </div>

  <% else %>

    <div class="container" style="background-color: #bde1ff;">
      <!-- Hero Section -->
      <section id="home" class="text-center">
        <h1 class="display-4"><u>You're using the Project Manager</u></h1>
        <p class="lead">Please upgrade to access all features.</p>
        <a href="#" class="btn btn-outline-primary">Purchase Now</a>
      </section>

      <!-- Features -->
      <section id="features" class="py-5">
        <div class="text-center mb-5">
          <h2>Features</h2>
        </div>
        <div class="row text-center">
          <div class="col-md-4 mb-4">
            <h4>Bootstrap 5</h4>
            <p>Modern responsive layout using Bootstrap 5.</p>
          </div>
          <div class="col-md-4 mb-4">
            <h4>Clean Design</h4>
            <p>Minimalist and modern layout that's easy to modify.</p>
          </div>
          <div class="col-md-4 mb-4">
            <h4>Easy to Use</h4>
            <p>Well-structured and developer-friendly components.</p>
          </div>
        </div>
      </section>

      <!-- About Section -->
      <section id="about" class="py-5 bg-light">
        <div class="row align-items-center">
          <div class="col-lg-6 mb-4">
            <%= image_tag "about-1.png", class: "img-fluid", alt: "About Us" %>
          </div>
          <div class="col-lg-6">
            <h2>Perfect Solution for Your Business</h2>
            <p>
              Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
            </p>
            <a href="#" class="btn btn-outline-secondary">Discover More</a>
          </div>
        </div>
      </section>

      <!-- Why Choose Us -->
      <section id="why" class="py-5">
        <div class="text-center mb-5">
          <h2>Why Choose Us</h2>
          <p class="text-muted">Benefits of using our solution</p>
        </div>
        <div class="row text-center">
          <div class="col-md-4 mb-4">
            <h5>SaaS Focused</h5>
            <p>Designed specifically for SaaS applications.</p>
          </div>
          <div class="col-md-4 mb-4">
            <h5>Simple Design</h5>
            <p>Get started quickly with minimal setup.</p>
          </div>
          <div class="col-md-4 mb-4">
            <h5>Optimized</h5>
            <p>Performance-focused HTML/CSS structure.</p>
          </div>
        </div>
      </section>

      <!-- Newsletter Section -->
      <section id="contact" class="py-5 bg-light">
        <div class="row align-items-center">
          <div class="col-md-6 mb-4 px-5">
            <h3>Subscribe to Our Newsletter</h3>
            <p>Stay updated with the latest news and offers.</p>
          </div>
          <div class="col-md-6">
            <form class="row g-2">
              <div class="col-auto">
                <input type="email" class="form-control" placeholder="Enter your email">
              </div>
              <div class="col-auto">
                <button type="submit" class="btn btn-primary">Subscribe</button>
              </div>
            </form>
          </div>
        </div>
      </section>
    </div>
  <% end %>
</div>
