<div class="card shadow-lg border-0 w-50 mx-auto my-5" style="border-radius: 20px; overflow: hidden; min-height: 250px;">
  <div class="bg-primary text-white text-center py-4">
    <img src="https://cdn-icons-png.flaticon.com/512/219/219988.png" alt="User Avatar"
         class="rounded-circle border border-3 border-white"
         style="width: 100px; height: 100px; object-fit: cover;">
    <h4 class="mt-3 mb-0"><%= @user.name.present? ? @user.name : 'No name provided' %></h4>
    <small class="text-light"><%= @user.role.humanize %></small>
  </div>

  <div class="card-body text-center">
    <p class="mb-2">
      <strong>Email:</strong> <%= @user.email %>
    </p>

    <%= form_with(model: [:admin, @user], local: true) do |f| %>
      <div class="mb-3">
        <%= f.label :role, "Select Role", class: "form-label fw-bold" %>
        <%= f.select :role, 
              options_for_select([["Manager", "manager"], ["Contributor", "contributor"]], @user.role),
              { prompt: @user.role },
              { class: "form-select w-50 mx-auto", required: true } %>
      </div>

      <%= f.submit "Update Role", class: "btn btn-primary mt-2" %>
    <% end %>
  </div>
</div>

<div class="text-center">
  <%= link_to "Back", admin_users_path, class: "btn btn-secondary w-25" %>
</div>
