<%# app/views/admin/users/index.html.erb %>
<h1 class="mb-4">All Users</h1>
<div class="mb-3">
    <%= link_to "Add New User", new_admin_user_path, class: "btn btn-success" %>
</div>

<table class="table table-hover table-bordered">
<thead class="table-primary">
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Name</th>
        <th>Email</th>
        <th>Role</th>
        <th colspan="3">Action</th>
    </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
        <tr>
            <th scope="row"><%= user.id %></th>
            <td><%= user.name || "N/A" %></td>
            <td><%= user.email %></td>
            <td><%= user.role.humanize %></td>
            <td><%= link_to 'Show', admin_user_path(user), class: "btn btn-sm btn-info" %></td>
            <td><%= link_to 'Edit', edit_admin_user_path(user),class: "btn btn-sm btn-warning" %></td>
            <td><%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %></td>
        </tr>
    <% end %>
    </tbody>
</table>
<div class="d-flex justify-content-center">
  <%= paginate @users, theme: 'bootstrap4' %>
</div>
